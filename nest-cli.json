{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ],
    "deleteOutDir": true,
    "assets": [
      {
        "include": "/secrets/",
        "outDir": "dist/",
        "watchAssets": false
      },
      {
        "include": "/asset/",
        "outDir": "dist/",
        "watchAssets": false
      }
    ]
  }
}
